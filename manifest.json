  {
    "name": "copy-thin-book",
    "version": "1.0.7",
    "description": "Copy the info of a thin book from Toranoana online shop.",
    "permissions": ["activeTab", "declarativeContent",  "clipboardWrite", "<all_urls>"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons":{
      "16": "images/copy_thin_book16.png",
        "32": "images/copy_thin_book32.png",
        "48": "images/copy_thin_book48.png",
        "128": "images/copy_thin_book128.png"
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/copy_thin_book16.png",
        "32": "images/copy_thin_book32.png",
        "48": "images/copy_thin_book48.png",
        "128": "images/copy_thin_book128.png"
      }
    },
    "manifest_version": 2
  }